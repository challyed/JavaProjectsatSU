    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed

        /// TODO add your handling code here:
        // type the code to perform the calculation
        
        //get the number type in the 1st textfeild
        // get the number types in the 2nd textfeild
        //add them together and put the result in the 3rd textfield
        String txt1, txt2, txt3;
        int num1, num2, res;
        
        //read the textfileds into temporary varaibles
        txt1 = jTextField1.getText();
        txt2 = jTextField2.getText();
        
        //convert and store numeric values for processing
        num1 = Integer.parseInt(txt1);
        num2 = Integer.parseInt(txt2);
        
        //perform the calculation
        res = num1 + num2 ;
       
        //convert to text aka string type
        txt3 = String.valueOf(res);
        
        //place result in textfiled 3
        jTextField3.setText(txt3);
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        // TODO add your handling code here:
        //This is Multi
        //get the number type in the 1st textfeild
        // get the number types in the 2nd textfeild
        //add them together and put the result in the 3rd textfield
        String txt1, txt2, txt3;
        int num1, num2, res;
        
        //read the textfileds into temporary varaibles
        txt1 = jTextField1.getText();
        txt2 = jTextField2.getText();
        
        //convert and store numeric values for processing
        num1 = Integer.parseInt(txt1);
        num2 = Integer.parseInt(txt2);
        
        //perform the calculation
        res = num1 * num2 ;
       
        //convert to text aka string type
        txt3 = String.valueOf(res);
        
        //place result in textfiled 3
        jTextField3.setText(txt3);
    }//GEN-LAST:event_jButton3ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:
        // This is subtract
                //get the number type in the 1st textfeild
        // get the number types in the 2nd textfeild
        //add them together and put the result in the 3rd textfield
        String txt1, txt2, txt3;
        int num1, num2, res;
        
        //read the textfileds into temporary varaibles
        txt1 = jTextField1.getText();
        txt2 = jTextField2.getText();
        
        //convert and store numeric values for processing
        num1 = Integer.parseInt(txt1);
        num2 = Integer.parseInt(txt2);
        
        //perform the calculation
        res = num1 - num2 ;
       
        //convert to text aka string type
        txt3 = String.valueOf(res);
        
        //place result in textfiled 3
        jTextField3.setText(txt3);
    }//GEN-LAST:event_jButton2ActionPerformed

